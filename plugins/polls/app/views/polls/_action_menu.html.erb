<div class="contextual">
<%= link_to l(:button_edit), edit_poll_path(@issue,project_id:@issue.project_id), :class => 'icon icon-edit' if @issue.editable? %>
<%= link_to l(:lv_li), lvli_list_poll_path(@issue,project_id:@issue.project_id), :class => 'icon icon-copy' if @issue.tracker.custom_fields.map(&:id).include?(1399) %>
<%= link_to l(:button_log_time), new_issue_time_entry_path(@issue), :class => 'icon icon-time-add' if User.current.allowed_to?(:log_time, @project) %>
<%= watcher_link(@issue, User.current) %>
<%#= link_to l(:button_copy), project_copy_issue_path(@project, @issue), :class => 'icon icon-copy' if User.current.allowed_to?(:copy_issues, @project) && Issue.allowed_target_projects.any? %>
<%= link_to l(:button_delete), poll_path(@issue,project_id:params[:project_id]), :data => {:confirm => issues_destroy_confirmation_message(@issue)}, :method => :delete, :class => 'icon icon-del' if User.current.allowed_to?(:delete_issues, @project) %>
<%= link_to "|  " + l(:piaoju_guanli),  jia_ju_piao_path(@issue.jia_ju_piao) if @issue.jia_ju_piao.present? && @issue.project_id == 22 && @issue.tracker_id == 80 %>
<a href="/qrcode/singleQRCode.php?data=<%= @issue.subject%>">| 二维码</a>
</div>