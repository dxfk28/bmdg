<!DOCTYPE html>
<html lang="<%= current_language %>">
<head>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge"/> 
<title><%= html_title %></title>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<meta name="description" content="<%= Redmine::Info.app_name %>" />
<meta name="keywords" content="issue,bug,tracker" />
<%= csrf_meta_tag %>
<%= favicon %>
<%= stylesheet_link_tag 'jquery/jquery-ui-1.11.0', 'application', 'responsive','animate', :media => 'all' %>
<%= stylesheet_link_tag 'rtl', :media => 'all' if l(:direction) == 'rtl' %>
<%= javascript_heads %>
<%= heads_for_theme %>
<%= call_hook :view_layouts_base_html_head %>
<!-- page specific tags -->
<%= yield :header_tags -%>
</head>
<style type="text/css">
  .content_div{
    width: 80%;
    margin-left: 10%;
    margin-top: 20px;
    min-width: 1067px;
    /*border-bottom: 1px solid;*/
  }
  .list_div{
    width: 100%;
    height: 100px;
    display: inline-block;
    background-color: #313539;
    position: relative;
    z-index: 1;
    border-radius: 10px 10px 10px 10px;
  }
  .content_div a{
    text-align: center;
    display: inline-block;
    height: 100%;
    margin-bottom: 20px;
  }
  .content_div p{
    color: white;
    font-weight: bold;
    font-size: 16px;
    margin-top: 30px;
    text-align: center;
  }
  h2{
    color:white;
  }
  .pr_a{
    margin-right: 15px;
    width: 18%;
  }
  .back{
    background-color: #404040;
    height: 27px;
    width: 100%;
    position: absolute;
    bottom: 0px;
    color: white;
    line-height: 27px;
    font-size: 15px;
    border-radius: 0px 0px 10px 10px;
  }
</style>
<body class="<%= body_css_classes %>" style="min-width: 1200px;">
<div id="wrapper" style="min-width: 1200px;">
<div class="flyout-menu js-flyout-menu"> 
    <% if User.current.logged? || !Setting.login_required? %>
        <div class="flyout-menu__search">
            <%= form_tag({:controller => 'search', :action => 'index', :id => @project}, :method => :get ) do %>
            <%= hidden_field_tag(controller.default_search_scope, 1, :id => nil) if controller.default_search_scope %>
            <%= label_tag 'flyout-search', '&#9906;'.html_safe, :class => 'search-magnifier search-magnifier--flyout' %>
            <%= text_field_tag 'q', @question, :id => 'flyout-search', :class => 'small js-search-input', :placeholder => l(:label_search) %>
            <% end %>
        </div>
    <% end %>

    <% if User.current.logged? %>
        <div class="flyout-menu__avatar <% if !Setting.gravatar_enabled? %>flyout-menu__avatar--no-avatar<% end %>">
            <% if Setting.gravatar_enabled? %>
                <%= link_to(avatar(User.current, :size => "80"), user_path(User.current)) %>
            <% end %>
            <%= link_to_user(User.current, :format => :username) %>
        </div>
    <% end %>

    <% if display_main_menu?(@project) %>
        <h3><%= l(:label_project) %></h3>
        <span class="js-project-menu"></span>
    <% end %>

    <h3><%= l(:label_general) %></h3>
    <span class="js-general-menu"></span>

    <span class="js-sidebar flyout-menu__sidebar"></span>

    <h3><%= l(:label_profile) %></h3>
    <span class="js-profile-menu"></span>

</div>

<div id="wrapper2">
<div id="wrapper3">
<div id="top-menu">
    <div id="account">
        <%= render_menu :account_menu -%>
    </div>
    <%= content_tag('div', "#{l(:label_logged_as)} #{link_to_user(User.current, :format => :username)}".html_safe, :id => 'loggedas') if User.current.logged? %>
    <%= render_menu :top_menu if User.current.logged? || !Setting.login_required? -%>
</div>

<div id="header">

    <a href="#" class="mobile-toggle-button js-flyout-menu-toggle-button"></a>

    <% if User.current.logged? || !Setting.login_required? %>
    <div id="quick-search">
        <%= form_tag({:controller => 'polls', :action => 'search_index'}, :method => :post ) do %>
        <%= hidden_field_tag(controller.default_search_scope, 1, :id => nil) if controller.default_search_scope %>
        <label for='q'>
          <%= link_to l(:label_search), {:controller => 'search', :action => 'index', :id => @project}, :accesskey => accesskey(:search) %>:
        </label>
        <%= text_field_tag 'q', @question, :size => 20, :class => 'small', :accesskey => accesskey(:quick_search) %>
        <% end %>
        <%= render_project_jump_box %>
    </div>
    <% end %>

    <h1><%= page_header_title %></h1>

    <% if display_main_menu?(@project) %>
    <div id="main-menu">
        <%= render_main_menu(@project) %>
    </div>
    <% end %>
</div>

<div id="main" class="<%= sidebar_content? ? '' : 'nosidebar' %>">
    <div id="sidebar">
        <%= yield :sidebar %>
        <%= view_layouts_base_sidebar_hook_response %>
    </div>

    <div id="content">
        <%= render_flash_messages %>
       <div style="margin-top: 44px;width: 100%;">
          <div class="content_div">
            <h2>在库管理</h2>
              <%= link_to new_issues_import_path(), class:" pr_a" do%>
                <div class="list_div">
                  <p>资产入库</p>
                   <div class="back">
                    BMDG在库管理
                  </div>
                </div>
              <% end %>
              <%= link_to plugin_issues_path(), class:" pr_a" do%>
                <div class="list_div">
                  <p>库存修改</p>
                  <div class="back">
                    BMDG在库管理
                  </div>
                </div>
              <% end %>
          </div>
          <% @projects.each do | project| %>
            <div class="content_div">
                <h2> <%= project.name%> </h2>
                <% if project.children.present? %>
                  <% project.children.second_show.sorted.each do |pr| %>
                    <%= link_to point_check_list_polls_path(project_id:pr.id), class:" pr_a" do%>
                      <div class="list_div">
                        <p><%= pr.name%></p>
                         <div class="back">
                          <%= project.name%>
                          </div>   
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
            </div>
          <% end %>
        </div>
        <%= call_hook :view_layouts_base_content %>
        <div style="clear:both;"></div>
    </div>
</div>
</div>

<div id="ajax-indicator" style="display:none;"><span><%= l(:label_loading) %></span></div>
<div id="ajax-modal" style="display:none;"></div>

<div id="footer">
  <div class="bgl"><div class="bgr">
    Powered by <%= link_to Redmine::Info.app_name, Redmine::Info.url %> &copy; 2006-2016 Jean-Philippe Lang
  </div></div>
</div>
</div>
</div>
<%= call_hook :view_layouts_base_body_bottom %>
</body>
<script type="text/javascript">
  $(document).ready(function (argument) {
    $("#main").css("margin-left","0px")
    $("#main").css('background','none repeat scroll 0 0 rgba(255, 255, 255,0)')
    $('#content').css('background','none repeat scroll 0 0 rgba(255, 255, 255,0)')
    $('#content').css('border','none')
  })
  $(".list_div").on('mouseover',function (argument) {
    $(this).find('p').css('color','#f35626')
    $(this).find('.back').css('color','#f35626')
    $(this).addClass('animated pulse')
  })
  $(".list_div").on('mouseout',function (argument) {
    $(this).find('p').css('color','white')
    $(this).find('.back').css('color','white')
    $(this).removeClass('animated pulse')
  })
</script>
</html>



